{
  "printWidth": 110,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "avoid",
  "overrides": [
    {
      "files": "*.{ts,tsx}",
      "options": {
        "semi": true,
        "singleQuote": true,
        "spaceBeforeFunctionParen": true,
        "overrides": [
          {
            "files": "*.{ts,tsx}",
            "options": {
              "parser": "typescript",
              "overrides": [
                {
                  "files": "*.{ts,tsx}",
                  "options": {
                    "parser": "typescript",
                    "semi": true,
                    "singleQuote": true,
                    "spaceBeforeFunctionParen": true,
                    "rules": {
                      "typescript-specific-thing": "foobar"
                    }
                  }
                }
              ]
            }
          }
        ]
      }
    }
  ]
}
